<% if @book.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
	<ul>
		<h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="edit">
	<div class="container">
		<div class="row-lg-6">
			<div class="col-lg-4">
				<h1>Editing Book</h1>
				<%= form_for(@book) do |f| %>
				<p>Title</p>
				<%= f.text_field :title %>
				<p>Opinion</p>
				<%= f.text_area :body %>
				<%=f.submit 'Update Book' %><br>

				<div class="item"><%= link_to "Show",book_path(@book.id) %></div>
				<div class="item"><p>  |  </p></div>
				<div class="item"><%= link_to "Back",books_path %></div>
				<div class="last-item"><p>CopyRight Infratop.inc</p></div>
				<% end %>
			</div>
		</div>
	</div>
</div>